{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",  
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,             
    "strictNullChecks": true,                                         
    "noUnusedLocals": true,                          
    "noUnusedParameters": true,                                   
    "skipLibCheck": true                                 
  },
  "ts-node": {
    "files": true
  }
}
