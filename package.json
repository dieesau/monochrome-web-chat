{
  "name": "monochrome",
  "version": "1.0.0",
  "description": "web messenger",
  "scripts": {
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "build": "webpack --config webpack.config.cjs --env mode=prod",
    "dev": "webpack serve --open --config webpack.config.cjs --env mode=dev",
    "start": "npm run build && node ./server.js",
    "prepare": "husky install",
    "lint": "npx eslint . --quiet",
    "stylelint": "npx stylelint ./src/**/*.{css,pcss}"
  },
