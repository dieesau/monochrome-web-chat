.profile {
    align-items: center;
}

.avatar {
    margin-bottom: 2.1rem;
    width: 13.0rem;
    height: 13.0rem;
    border-radius: 50%;
    object-fit: cover;
}

.profile__header {
    font-size: 1.6rem;
    font-weight: 600;
    margin-top: 0;
    margin-bottom: 6.0rem;
    @mixin text #1E1E1E, 1.6rem, 1.6rem, 600;
}

.profile__inputs-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 6.0rem;

    button {
        align-self: center;
    }

    .input-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin: 0;
    }
}

.profile__input-disabled {
    pointer-events: none;
    border: none;
    outline: none;
    border-bottom: 0.1rem solid var(--profile-input-border);
    width: 51.0rem;
    margin-bottom: 1.0rem;
    @mixin text #999999, 1.3rem, 1.3rem;
    text-align: right;
    padding-bottom: 1rem;
}

.profile__label {
    @mixin text #1E1E1E, 1.3rem, 1.3rem;
    position: relative;
    font-size: 1.3rem;
    top: 1.7rem;
    font-weight: 500;
}

.profile__input {
    border: none;
    outline: none;
    border-bottom: 0.1rem solid var(--profile-input-border);
    width: 51.0rem;
    margin-bottom: 1.0rem;
    @mixin text #999999, 1.3rem, 1.3rem;
    text-align: right;
    padding-bottom: 1rem;
}

.profile__link {
    @mixin text var(--main-blue), 1.3rem, 1.3rem;
    text-decoration: none;
    margin-bottom: 2.1rem;
    margin-left: 0;
    margin-right: auto;
}

.red-link {
    @mixin text #FF0000, 1.3rem, 1.3rem;
    text-decoration: none;
    margin-bottom: 2.1rem;
    margin-left: 0;
    margin-right: auto;
}

.red-link:hover {
    cursor: pointer;
}

